      <servlet-name>NoticeServlet</servlet-name>
      <servlet-class>com.neuedu.lvcity.servlet.NoticeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>NoticeServlet</servlet-name>
      <url-pattern>/User/noticetype</url-pattern>
    </servlet-mapping>
        <!-- 留言   黄润志 2018-7-22 -->
